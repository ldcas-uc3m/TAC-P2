\ProvidesPackage{mymacros}[Auxiliary helper macros for the report]


\newcommand{\footurl}[1]{%
  \footnote{\url{#1}}%
}


\newcommand{\makebibliography} {
  \part{Bibliografía}
  % \addcontentsline{toc}{part}{Bibliografía}
  \printbibliography
  \newpage
}


% \rasterfigure[width]{filename}{caption}
\newcommand{\rasterfigure}[3][0.7] {
  \begin{figure}[h]
    \centering
    \includegraphics[width=#1\textwidth]{#2}
    \caption{#3}
    \label{fig:#2}
  \end{figure}
}

% \svgfigure[width]{filename}{caption}
\newcommand{\svgfigure}[3][0.7] {
  \begin{figure}[h]
    \centering
    \includesvg[width=#1\textwidth]{#2}
    \caption{#3}
    \label{fig:#2}
  \end{figure}
}


% \plotperformance{algorithm}
\newcommand{\plotperformance}[1] {
  \begin{figure}[H]
    \centering
    \begin{subfigure}{.45\textwidth}
      \centering
      \includesvg[width=\linewidth]{performance_#1_n.svg}
      \caption{Con respecto a $n$}
    \end{subfigure}
    \begin{subfigure}{.45\textwidth}
      \centering
      \includesvg[width=\linewidth]{performance_#1_p.svg}
      \caption{Con respecto a $p$}
    \end{subfigure}
    \caption{Tiempo de ejecución del algoritmo #1}
  \end{figure}
}